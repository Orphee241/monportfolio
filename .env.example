# =============================================================================
# Portfolio Environment Variables
# =============================================================================
# Copy this file to .env.local for local development
# Never commit .env.local to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Site Configuration
# -----------------------------------------------------------------------------
# The base URL of your deployed site (used for SEO and Open Graph tags)
NEXT_PUBLIC_SITE_URL=https://gona241.com

# Site name for meta tags
NEXT_PUBLIC_SITE_NAME=GONA - Portfolio

# -----------------------------------------------------------------------------
# Contact Information
# -----------------------------------------------------------------------------
# WhatsApp number in international format (with country code, no spaces)
# Example: +241XXXXXXXXX
NEXT_PUBLIC_WHATSAPP_NUMBER=+241XXXXXXXXX

# Contact email address
NEXT_PUBLIC_EMAIL=contact@gona241.com

# Phone number for tel: links (with country code)
NEXT_PUBLIC_PHONE=+241XXXXXXXXX

# -----------------------------------------------------------------------------
# Analytics (Optional)
# -----------------------------------------------------------------------------
# Google Analytics Measurement ID (if using GA)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# Enable/disable WhatsApp floating button
NEXT_PUBLIC_ENABLE_WHATSAPP_BUTTON=true

# Enable/disable contact form (if implemented)
# NEXT_PUBLIC_ENABLE_CONTACT_FORM=true

# -----------------------------------------------------------------------------
# Build Configuration
# -----------------------------------------------------------------------------
# Enable bundle analyzer (set to 'true' to analyze bundle size)
# ANALYZE=false
