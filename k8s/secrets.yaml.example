# Kubernetes Secrets Template
# 
# IMPORTANT: This is a template file. DO NOT commit actual secrets to version control!
# 
# Instructions for creating actual secrets:
# 
# 1. Copy this file to secrets.yaml (which should be in .gitignore)
#    cp secrets.yaml.example secrets.yaml
# 
# 2. Replace all placeholder values with actual base64-encoded secrets
#    To encode a value: echo -n "your-secret-value" | base64
# 
# 3. Apply the secrets to your cluster:
#    kubectl apply -f secrets.yaml
# 
# 4. Verify the secrets were created:
#    kubectl get secrets portfolio-secrets
# 
# Alternative: Create secrets directly via kubectl (recommended for production)
# kubectl create secret generic portfolio-secrets \
#   --from-literal=DATABASE_URL="your-database-url" \
#   --from-literal=API_KEY="your-api-key" \
#   --from-literal=JWT_SECRET="your-jwt-secret"

apiVersion: v1
kind: Secret
metadata:
  name: portfolio-secrets
  labels:
    app: portfolio
type: Opaque
data:
  # Database connection string (if needed)
  # Example: postgresql://user:password@host:5432/dbname
  # DATABASE_URL: <base64-encoded-value>
  
  # API keys for external services (if needed)
  # API_KEY: <base64-encoded-value>
  
  # JWT secret for authentication (if needed)
  # JWT_SECRET: <base64-encoded-value>
  
  # Email service credentials (if needed)
  # SMTP_PASSWORD: <base64-encoded-value>
  
  # Third-party service tokens (if needed)
  # ANALYTICS_TOKEN: <base64-encoded-value>
  # SENTRY_DSN: <base64-encoded-value>
  
  # Add other sensitive credentials here
  # Remember: All values must be base64-encoded
  # To encode: echo -n "your-value" | base64
  # To decode: echo "encoded-value" | base64 -d

---
# Example of how to reference secrets in deployment.yaml:
# 
# env:
# - name: DATABASE_URL
#   valueFrom:
#     secretKeyRef:
#       name: portfolio-secrets
#       key: DATABASE_URL
# 
# Or mount all secrets as environment variables:
# 
# envFrom:
# - secretRef:
#     name: portfolio-secrets
